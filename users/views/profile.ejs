<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
			body        { padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
	</div>
    <% if (message || "" == "") { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>
		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-sm-6">
				<div class="well">
					<h3><span class="fa fa-user"></span> Local</h3>
							<p>
									<strong>Privilages</strong>: <%= user.tipo%><br>
									<strong>id</strong>: <%= user.id_u %><br>
									<strong>Name</strong>: <%= user.username %><br>
									<strong>Pass</strong>: <%= user.password %>
							</p>
							<a href="/profile">Recargar</a>
							
							<% if(user.tipo==0) { %>
							<form action="/signup" method="get">
								<input type="submit" value="Manage accounts" />
 							</form>
							<% } %>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="well">
							<h1>Bandeja</h1>
								<% for (var i = 0 ; i < mensajes.length ; i ++){ %>
									<div>
										<p>
											De: <%= mensajes[i].username %><br>
											<%= mensajes[i].mensaje %>
										<p>
								</div>
							<% } %>
					</div>
					<form action="/send" method="post">
							<textarea name="mensaje" placeholder="Message"></textarea><br>
							<input type="submit" value="SEND!">
					</form>
				</div>
	</div>
		<div class="col-sm-6">
			<div class="well">
					<h1>Tasks</h1>
					<% for (var i = 0 ; i < tareas.length ; i ++){ %>
						<div>
								<p>
									<%= tareas[i].id_t%>
									Para: <%= tareas[i].username %><br>
									<%= tareas[i].t_title %>
									<%= tareas[i].t_content %><br>
									Status: <%= tareas[i].status%>
									<% if(user.tipo == 0) { %>
											<% if(tareas[i].status == 1) { %>
											<form action="/elimTask" method="post">
												<input type="hidden" name="tareaD_id" value="<%= tareas[i].id_t %>">
												<input type="submit" value="Done!">
											</form>
											<form action="/reTask" method="post">
												<input type="hidden" name="tareaD_id" value="<%= tareas[i].id_t %>">
												<input type="submit" value="Again!">
											</form>
											<% } else { %>
												<br><strong>Waiting for review request</strong><br>
											<% } %>
									<% } else { %>	
											<% if(tareas[i].status == 0) { %>
											<form action="/reTask" method="post">
												<input type="hidden" name="tareaD_id" value="<%= tareas[i].id_t %>">
												<input type="submit" value="Pls D;">Submit for Review
											</form>
											<% } else { %>
												<strong>Pending Review</strong><br>
											<% } %>
									<% } %>
								<p>
						</div>
						<hr>	
					<% } %>
			</div>
				<% if(user.tipo == 0) { %>
				<form action="/tsend" method="post">
						<select name="empleado">
						<option selected disabled hidden>Empleado</option>
						<% for( var i = 0 ; i < empleados.length ; i ++ ){ %>
							<option value="<%= empleados[i].id_u %>"> <%= empleados[i].username %> </option>
						<% } %>
						</select>
						<br>
						<textarea name="title" placeholder="Titulo"></textarea><br>
						<textarea name="tarea" placeholder="Descripcion"></textarea><br>
						<input type="submit" value="T SEND!">
				</form>
				<% } %>
		</div>
	<form action="/logout" method="get">
		<input type="submit" value="LogOut?" />
	</form>

</div>
</body>
</html>
